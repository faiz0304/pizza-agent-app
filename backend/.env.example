# ============================================
# PIZZA AGENT BACKEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Atlas connection string
# Get from: https://cloud.mongodb.com
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/
MONGODB_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/
MONGODB_DB_NAME=pizza_db

# ============================================
# LLM API KEYS
# ============================================
# HuggingFace API Token (Primary)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Groq API Key (Optional - Fallback LLM)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google AI API Key (Optional - Fallback LLM)
# Get from: https://ai.google.dev/
GOOGLE_API_KEY=AIxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# TWILIO WHATSAPP INTEGRATION
# ============================================
# Twilio Account SID
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio Auth Token
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio WhatsApp Number
# Format: whatsapp:+14155238886 (Twilio sandbox) or your own number
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ============================================
# VECTOR DATABASE (FAISS)
# ============================================
# Directory for FAISS persistent storage
FAISS_PERSIST_DIR=./faiss_db

# ============================================
# SERVER CONFIGURATION
# ============================================
# Backend server port
PORT=8000

# Backend server host
HOST=0.0.0.0

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ============================================
# OPTIONAL SETTINGS
# ============================================
# LLM Model Selection (default uses HuggingFace)
# Options: huggingface, groq, google
# LLM_PROVIDER=huggingface

# HuggingFace Model ID
# LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Enable debug logging
# DEBUG=False
